        //List<Product> ordersdata = ((IEnumerable<Product>)TempData["productorders"]).ToList();
        IEnumerable<Product> ordersdata = (IEnumerable<Product>)TempData["productorders"];
    }
@foreach (var item in ordersdata) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Prodid)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Qty)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
            @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
