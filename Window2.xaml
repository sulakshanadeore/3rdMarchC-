<Window x:Class="WpfApp1.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Window2" Height="450" Width="800">
    <WrapPanel Orientation="Horizontal">
        <TextBlock x:Name="FirstName" TextWrapping="Wrap" Text="Enter FirstName"/>
        <TextBox x:Name="txtfname" Height="23" TextWrapping="Wrap" Text="TextBox" Width="120"/>
        <TextBlock x:Name="LastName" TextWrapping="Wrap" Text="Enter LastName"/>
        <TextBox x:Name="txtlname" Height="23" TextWrapping="Wrap" Text="TextBox" Width="120"/>
        <TextBlock x:Name="Empid" TextWrapping="Wrap" Text="Enter Emp ID"/>
        <TextBox x:Name="txtempid" Height="23" TextWrapping="Wrap" Text="TextBox" Width="120"/>
        <Button x:Name="button" Content="Save" Width="75"/>



    </WrapPanel>
</Window>
